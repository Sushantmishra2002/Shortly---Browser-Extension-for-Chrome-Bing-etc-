{
  "manifest_version": 3,
  "name": "Shortly \u2014 Quick Article Summaries",
  "description": "Extracts main points from long articles and displays concise bullet-point summaries.",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Shortly \u2014 Summarize this page"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}